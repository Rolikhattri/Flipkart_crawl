<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => @product.title.humanize.titleize %></h1>
</div>

<div id="image_display" style="float: left;">
  <%= image_tag @product.image, style: 'width:200px;' %>
</div>


<div id="data_display" style="float: left; max-width: 500px;" >
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
    <dd><%= truncate(@product.url, :length => 100) %></dd>
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= @product.title %></dd>
    <dt><strong><%= model_class.human_attribute_name(:mrp) %>:</strong></dt>
    <dd><%= @product.mrp %></dd>
    <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
    <dd><%= @product.price %></dd>
    <dt><strong><%= model_class.human_attribute_name(:discount) %>:</strong></dt>
    <dd><%= @product.discount %></dd>
    <dt><strong><%= model_class.human_attribute_name(:rating) %>:</strong></dt>
    <dd><%= @product.rating %></dd>
    <dt><strong><%= model_class.human_attribute_name(:seller) %>:</strong></dt>
    <dd><%= @product.seller %></dd>
    <dt><strong><%= model_class.human_attribute_name(:devlivery_date) %>:</strong></dt>
    <dd><%= @product.devlivery_date %></dd>
    <dt><strong><%= model_class.human_attribute_name(:soldout) %>:</strong></dt>
    <dd><%= @product.soldout %></dd>

    <div id="button_display" style="padding-top: 25px; clear: left; padding-left: 100px">
<%= link_to t('.back', :default => t("helpers.links.back")),
              dashboard_products_path, :class => 'btn btn-default'  %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
  </dl>
</div>


